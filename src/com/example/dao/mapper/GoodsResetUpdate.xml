<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.mapper.GoodsResetUpdate">
    <select id="selectSingle" resultType="Goods">
        SELECT * FROM goods WHERE id=#{id};
    </select>
    <select id="selectSingleByName" resultType="Goods">
        SELECT * FROM good WHERE goodName=#{name};
    </select>
    <update id="upDateReset">
        UPDATE goods SET account=#{1} WHERE id=#{0}
    </update>
</mapper>