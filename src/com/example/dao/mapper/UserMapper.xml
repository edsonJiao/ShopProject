<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.mapper.UserMapper">
    <select id="selectUser" resultType="user">
        SELECT * FROM users where admin=#{0} AND password=#{1}
    </select>
    <insert id="insertUser">
        INSERT INTO users(admin,password,username) VALUES(#{0},#{1},#{2})
    </insert>
    <select id="selectGoods" resultType="Goods">
        SELECT * FROM goods;
    </select>
    <select id="selectGoodsByName" parameterType="String" resultType="Goods">
        SELECT * FROM goods WHERE goodName LIKE '%${value}%';
    </select>
</mapper>